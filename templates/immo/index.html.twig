{% endblock %}
{% block body %}
<style>
body {
    background:#f7f7f7
}
.h-spec {
    font-size: 24px;
    padding-bottom: 5px;
    margin-bottom: 20px;
    border-bottom: 1px solid #d5dadd;
    position: relative;
}
    .h-spec:after {
    content: "";
    display: block;
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 174px;
    height: 3px;
    background: #00d1b2
    }
    .col-list-spec .column {
        padding: 5px !important;
        white-space: nowrap !important;
    }
    .col-comment {
        background: #fff;
        height: auto;
        border-radius: 5px;
        padding: 13px;
        display: flex
    }
    .thumb-avatar {
        height: 60px;
        width: 70px;
        float: left;
        border-radius: 5px;
        background: url('https://lorempixel.com/640/480/?39446') center no-repeat;
        background-size: cover
    }
    .col-ex {
        width: 100%;
        margin-left: 7px;
    }
    .container {
        position: relative
    }
    .bloc-reservation {
        position: absolute;
        width: 25%;
        background: #fff;
        top: 10px;
        right: 0;
        left: 943px;
        border-radius: 8px 8px 0 0
    }
    .hd-price {
        background: #00d1b2;
        text-align: center;
        border-radius: 8px 8px 0 0;
    }
    .hd-price>div:first-of-type {
        border-bottom: 1px solid #11e2c3;
    }
     .hd-price div {
        padding: 17px
    }
    .prices {
        font-family: 'Lato-Bold' !important;
         color: hsl(0, 0%, 100%) !important
    }
    sub {
        font-size: 16px !important;
         color: hsl(0, 0%, 100%) !important
    }
    .reserve {
            line-height: 5rem;
    }
    .reserve input {
        padding-bottom: 22px;
        padding-top: 22px;
        border-radius: 10px;
    }
    .btn-reserve {
        width: 100%;
        padding: 30px;
        background: #00d1b2;
        border: navajowhite;
        border-radius: 0 0 10px 10px;
        color: #fff;
        font-size: 13pt;
    }
    .btn-reserve:hover { 
        background: #1ee6c9;
        cursor: pointer
    }
    hr {
        background-color: #ccc !important;
        height: 1px !important;
    }
    .card {
        box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.08) !important;
        -webkit-box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.08) !important;
        overflow: hidden ;
    }
    .title {
        font-family: lato-bold !important;
    }
    .annex {
            padding-bottom: 0;
            font-size: 13px;
    }
     .annex i {
            font-size: 14px !important;
    }
 
</style>
    <div class="col-head-immo" style="background:url('http://127.0.0.1:8000/images/duplex_house.jpg') center no-repeat;background-size: cover">
        <div style="display: flex;padding-top: 2rem;">
            <div style="width: 80%;padding-left: 1rem;">
                <h2 class="title has-text-white is-1">  {{ houses.title }} </h2>
            </div>
            <div style="width: 20%">
                <a class="button is-light viewgal">
                    <span class="icon">
                    <i class="fas fa-camera-retro" style="font-size: 18px;"></i>
                    </span>
                    <span>Voir la galerie d'image/{{houses.photographies.count}}</span>
                </a>
            </div>
        </div>
    </div>
    <br>
    <div class="columns" style="flex-wrap: wrap;position: relative">
        <div class="column is-7" style="margin-left: 11rem;">
                <div class="columns" style="flex-wrap: wrap;">
                    {% if houses.image.name %}
                        
                            <div class="column is-12">
                                <div style="background:url('{{ vich_uploader_asset(houses, 'imageFile') }}') center no-repeat;background-size: cover;height: 400px;width: 702px">

                                </div>
                            </div>
                        {% else %}
                                    <div class="column is-12">
                                        <div style="background: url('../images/home.png') center no-repeat;background-size: 37%;background-color: #69696961;height: 400px;width: 702px">

                                        </div>
                                    </div>
                                
                        {% endif %}
                   {% if houses.photographies %}
                   <div class="column is-12">
                        <div id="lightgallery">
                            {% for photo in houses.photographies %}
                                <a href="../images/appart/{{photo.image.name}}">
                                    <img id="gal" src="../images/appart/{{photo.image.name}}" style="width:200px;height:120px"/>
                                </a>
                            {% endfor %}
                        </div>
                   </div>
                    
                    {% endif %}     
                </div>
              
            <p style="margin-right: 4rem;text-align: justify;">
                {{houses.commentaire}}
            </p>
        </div>
        <div class="column is-5">
          
        </div>
        {#  #}
            <div class="bloc-reservation">
            <div class="hd-price">
                <div>
                    <span class="title"> <b class="prices">$120</b> <sub> Per Day </sub>  </span>
                </div>
                <div>
                    <span class="title"> <b class="prices"> $899 </b>  <sub> Per month </sub>  </span>
                </div>
            </div>
            <div style="padding: 3ex">
                {{form_start(form2, {'attr': {'class': 'reserve'} } )}}
                {{ form_widget(form2) }}
                {{form_end(form2)}}
            </div>
             <input type="submit" class="btn-reserve" value="Reservation instantanée">
        </div>
        {#  #}
    </div>
    <div class="columns" style="flex-wrap: wrap;margin-left: 11rem;width: 100%">
        <div class="column is-7" style="">
            <div class="columns">
                <div class="column is-12">
                        <h2 class="title is-4 h-spec" style="width: 93%;">Specifications</h2>
                </div>
            </div>
            <div class="columns col-list-spec" style="flex-wrap: wrap;margin-left: -6px;">
                <div class="column is-4">
                    Année: <b> {{ houses.annee }} </b>
                </div>
                <div class="column is-4">
                    Espace: <b> {{ houses.surface }} </b>
                </div>
                 <div class="column is-4">
                    Salon: <b> {{ houses.salons }} </b>
                </div>

                <div class="column is-4">
                    Douches: <b> {{ houses.douches }} </b>
                </div>
                <div class="column is-4">
                    Chambre: <b> {{ houses.chambres }} </b>
                </div>
                 <div class="column is-4">
                    Balcons: <b> {{ houses.balcons }} </b>
                </div>

                <div class="column is-4">
                   Parking: <b> {{ houses.parking }} </b>
                </div>
                <div class="column is-4">
                    Etage: <b> {{ houses.etages }} </b>
                </div>
                 <div class="column is-4">
                    Cuisine: <b> {{ houses.salons }} </b>
                </div>

                <div class="column is-4">
                    Garage: <b> {{ houses.garage }} </b>
                </div>
                <div class="column is-4">
                    Piscine: <b> {{ houses.piscines }} </b>
                </div>
                 <div class="column is-4">
                    {# Assurance: <b> {{ houses.reqassurance }} </b> #}
                </div>
            </div>
        </div>
        <div class="column is-5">
           
        </div>
    </div>
    <div class="columns" style="margin-left: 11rem;width: 100%;margin-top: 1rem;flex-wrap: wrap">
        <div class="column is-7" >
             <div>
                <h2 class="title is-4 h-spec" style="width: 93%">Caractéristiques</h2>
            </div>
        </div>
        <div class="column is-5" >
            
        </div>
    </div>
    <div class="columns" style="margin-left: 11rem;margin-right: 11rem;flex-wrap: wrap;">
        <div class="column is-6">
            <div class="columns" style="flex-wrap: wrap">
                {% for spec in houses.caracteristiques %}
                    <div class="column is-4">
                        <i class="far fa-check-square" style="font-size: 18px;"></i><span> {{ spec }} </span>  
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <section ng-controller="formController">
    <div class="columns" style="margin-left: 11rem;width: 100%;margin-top: 1rem;flex-wrap: wrap">
        {% if count > 0 %}
            <div class="column is-7" >
                <div>
                    <h2 class="title is-4 h-spec" style="width: 93%">Commentaires:{{count}}</h2>
                </div>
            </div>
        {% endif %}
        <div class="column is-5" >
            
        </div>
    </div>
            <section id="commentaires">
            {% for comment in houses.comments|reverse %}
                <div class="columns" style="margin-left: 11rem;margin-right: 11rem;flex-wrap: wrap;">
                    <div class="column is-8">
                        <div class="col-comment">
                        <div class="thumb-avatar">

                        </div>
                            <div class="col-ex" style="display: grid">
                                <span>
                                    <span style="float: left;font-size: 17px;font-weight: bold;color: #00d1b2"> 
                                    {{comment.nom}} {{comment.prenom}} </span>
                                    <span style="float: right;margin-right: 2rem">{{comment.createdAt|date("m/d/Y", "Europe/Paris") }}</span>
                                </span>
                                <div>
                                    <h2 class="title is-5" style="margin-bottom: 0">{{comment.titre}}</h2>
                                    <br>
                                    <p> {{comment.textes}} </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </section>
     <div class="columns" style="margin-left: 11rem;width: 100%;margin-top: 1rem;flex-wrap: wrap">
        <div class="column is-7" >
             <div>
                <h2 class="title is-4 h-spec" style="width: 93%">Faire un commentaire</h2>
            </div>
        </div>
        <div class="column is-5" >
            
        </div>
        <div class="column is-6 alert" ng-show="alert">
                        <div class="notification is-danger">
                            <button class="delete"></button>
                            Remplissez les champs laissés en rouge / vide !
                        </div>
        </div>
    </div>
    
                
    <div class="columns" style="margin-left: 11rem;margin-right: 11rem;flex-wrap: wrap;">
     {{ form_errors(form) }}
         <div class="column is-8">
                {{form_start(form)}}
                    {{form_row(form.textes, {'attr': {'ng-class': "[{'input is-danger': message, 'input': 'true'}]"}}) }}
                    <div class="columns" style="flex-wrap: wrap">
                        <div class="column is-4 " style="position: relative">
                            {{form_row(form.nom, {'attr': {'ng-class': "[{'input is-danger': nom, 'input': 'true'}]"}} )}}
                        </div>
                         <div class="column is-4 ">
                             {{form_row(form.prenom, {'attr': {'ng-class': "[{'input is-danger': prenom, 'input': 'true'}]"}}) }}
                        </div>
                         <div class="column is-4 ">
                             {{form_row(form.email, {'attr': {'ng-class': "[{'input is-danger': email, 'input': 'true'}]"}})}}
                        </div>
                    
                        <div class="column is-12" style="">
                                {{form_row(form.titre, {'attr': {'ng-class': "[{'input is-danger': titre, 'input': 'true'}]"}} )}}
                        </div>
                        <div class="column is-12" style="margin-bottom: 1rem">
                            <button type="submit" class="button is-primary comment" value="Publier le message" titre="{{houses.slugs}}" id="{{houses.id}}" ng-class="[{'is-loading': send}]">Publier</button>
                        </div>
                    </div>
        {{form_end(form)}}
         </div>
    </div>
        
        <script>
            $(document).ready(function() {
                $('.picked').pickadate()
            })
        </script>
        {% if annexes %}
            <div class="columns" style="margin-left: 11rem;margin-right: 11rem;margin-top: 1rem;flex-wrap: wrap">
                <div class="column is-6" >
                    <div>
                        <h2 class="title is-4 h-spec">Maisons&appartements connexes</h2>
                    </div>
                </div>
                <div class="column is-6" >
                    
                </div>
            </div>
        {% endif %}
         
</section>
        <div class="columns" style="flex-wrap: wrap;margin-left: 11rem;margin-right: 11rem">
            {% for annexe in annexes %}
            <div class="column is-4">
                <a href="{{path('immo', {'title': annexe.slugs, 'id': annexe.id } )}}">
               <div class="card" style="border-radius: 7px;">
               {% if annexe.image.name %}
                    <div class="card-content" style="background: url('{{ vich_uploader_asset(annexe, 'imageFile') }}') center no-repeat;background-size: cover;height: 216px;border-radius: 5px 7px 0 0;">
                        
                    </div>
                {% else %}
                     <div class="card-content" style="background: url('../images/home.png') center no-repeat;background-size: 50%;height: 158px;border-radius: 5px 7px 0 0;">
                        
                    </div>
                {% endif %}
                    <footer class="card-footer">
                      <div class="columns" style="font-family: 'ubuntu';flex-wrap: wrap;width: 100%;margin: 0"> 
                        <div class="column is-12 annex">
                            <h4 class="title is-5" style="color: #000;text-align: left;color: #00d1b2;    margin-bottom: 0;"> {{annexe.title}} 
                                                    </h4>
                        </div>
                        
                       <div class="column is-6 annex" style="text-align: left;">
                                <i class="fas fa-building" style="font-size: 12px;color: #00d1b2;"></i>
                                <span style="font-family: ubuntu;"> {{annexe.category.label}} </span>
                            
                       </div>
                       
                            <div class="column is-6 annex">
                               <i class="fas fa-phone-volume" style="color: #00d1b2;"></i> {{annexe.numero}}
                            </div>
                             <div class="column is-6 annex">
                               <i class="fas fa-coins" style="color: #00d1b2;"></i> {{annexe.prix}}
                            </div>
                            {% for type in annexe.types %}
                            <div class="column is-6 annex" style="padding-bottom: 11px;">
                               <i class="fas fa-hand-holding-usd" style="color: #00d1b2;"></i> {{type.types}}
                            </div>
                            {% endfor %}
                            
                            
                      </div>  
                    </footer>
                </div>
                </a>
            </div>
            {% endfor %}
        </div>
{% endblock %}