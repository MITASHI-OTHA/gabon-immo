{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="content"  style="padding-left: 37px;">
        <h1 class="title"> Connexion </h1>
        <div class="columns">
            <form method="post">
    {% if error %}
        <article class="message is-danger">
            <div class="message-body">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </article>
    {% endif %}

    {% if app.user %}
        <div class="column is-12">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
    <div class="column is-12">
    <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input" required autofocus>
    </div>
    <div class="column is-12">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="input" required>
    </div>
    

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="column is-12">
        <button class="button is-primary" type="submit">
            Connexion
        </button>
    </div>
    
</form>
        </div>
</div>

{% endblock %}
